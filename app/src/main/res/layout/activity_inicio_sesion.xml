<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layoutLogin"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradie_list2"
    tools:context=".Controllador.InicioSesion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:background="#3fff">

        <TextView
            android:id="@+id/lblDAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="DAL"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/joti_one"
            android:background="@drawable/btn_login"
            android:gravity="center"
            android:hint="Usuario"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/txtContrasena"
            android:hint="ContraseÃ±a"
            android:fontFamily="@font/joti_one"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_login"/>

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_login_color"
            android:text="INGRESAR" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#3fff"
            android:layout_marginTop="15dp">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblRegistrar"
            android:text="Registrarse"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="#ffffff"/>

    </LinearLayout>

</RelativeLayout>