<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/butoontres">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CERRAR SESION Y SALIR DE DAL"
            android:textSize="30dp"
            android:textAlignment="center"
            android:fontFamily="@font/joti_one">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnConfirmarCerrarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_color_cancelar"
                android:fontFamily="@font/joti_one"
                android:text="CONFIRMAR"
                android:layout_marginLeft="25dp"
                android:textAllCaps="false"
                android:textColor="#FFFBF8"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnCancelarSalirCerrarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/btn_login_color"
                android:fontFamily="@font/joti_one"
                android:text="OLVIDAR"
                android:textAllCaps="false"
                android:textColor="#FFFBF8"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>