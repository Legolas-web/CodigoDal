<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/butoontres">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtTituloPractica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITULO"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:fontFamily="@font/joti_one"
                android:layout_margin="10dp">

            </TextView>


            <TextView
                android:id="@+id/txtTextoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/introoo"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textAlignment="center"></TextView>

            <TextView
                android:id="@+id/txtTextoPractico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:text="@string/Loren"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="center">

            </TextView>

            <TextView
                android:id="@+id/txtTextoPie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/introoo"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textAlignment="center"></TextView>


        </LinearLayout>

    </ScrollView>



</LinearLayout>