<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutAdmin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradie_list2"
    tools:context=".Controllador.AdminUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3fff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imgAnonimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardBackgroundColor="#3fff">

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgAdminUser"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/anonimo" />

                <TextView
                    android:id="@+id/lblNombreAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/joti_one"
                    android:text="Mental"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/txtNameAdminUser"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:background="@drawable/btn_login"
            android:fontFamily="@font/joti_one"
            android:gravity="center"
            android:hint="Nombre"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/txtNameFullAdminUser"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_login"
            android:fontFamily="@font/joti_one"
            android:gravity="center"
            android:hint="Nombre Completo"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/txtPasswordAdminUser"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_login"
            android:fontFamily="@font/joti_one"
            android:gravity="center"
            android:hint="Contraseña"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/txtConfirmaPasswordAdminUser"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_login"
            android:fontFamily="@font/joti_one"
            android:gravity="center"
            android:hint="Confirmar Contraseña"
            android:textColor="#ffffff" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="#3fff"></View>

        <Button
            android:id="@+id/buttonActualizaUser"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_login_color"
            android:text="ACTUALIZAR" />

    </LinearLayout>

</RelativeLayout>